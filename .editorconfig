# https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{json,yml,md,babelrc,remarkrc,prettierrc}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
